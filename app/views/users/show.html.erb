<h1><%= @user.username %>'s Events</h1>

<div>
  <% @user.created_events.each do |event| %>
    <div>
      <h3><%= event.name %></h3>
      <p><%= event.description %></p>
      <p>Where: <strong><%= event.location %></strong></p>
      <p>When: <strong><%= event.date %></strong></p>
      <p>Time: <strong><%= event.time.strftime("%H%M") %></strong></p>
    </div>
  <% end %>
</div>