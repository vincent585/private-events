<%= form_with model: @event do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prevented this event from being created:</h2>

      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :name, "Name" %> <br />
  <%= form.text_field :name, placeholder: "What's your event called?", autofocus: true %> <br />
  <%= form.label :description, "Description" %> <br />
  <%= form.text_area :description, size: "70x15", placeholder: "What is your event for?" %> <br />
  <%= form.label :location, "Location" %> <br />
  <%= form.text_field :location, placeholder: "Where is the event?" %> <br />
  <%= form.label :date, "Date" %> <br />
  <%= form.date_field :date %> <br />
  <%= form.label :time, "Time" %> <br />
  <%= form.time_field :time %> <br />
  <%= form.submit "Create event" %>
<% end %>