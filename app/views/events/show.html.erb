<h1>Event details</h1>

<div>
  <h2><%= @event.name %></h2>
  <h3>Hosted by: <%= @event.creator.username %></h3>
  <p>Description: <%= @event.description %></p>
  <p>Location: <%= @event.location %></p>
  <p>When: <strong><%= @event.date %></strong></p>
  <p>Time: <strong><%= @event.time.strftime("%H:%M") %></strong></p>
</div>